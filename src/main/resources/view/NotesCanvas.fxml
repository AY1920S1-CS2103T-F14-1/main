<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<AnchorPane xmlns:fx="http://javafx.com/javafx" style="-fx-border-color: #7d2277"
            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <ToolBar>
            <HBox spacing="5.0">
                <Button fx:id="pencilButton" text="Pencil"/>
                <Button fx:id="eraserButton" text="Eraser"/>
                <Button fx:id="clearButton" text="Clear"/>
            </HBox>
        </ToolBar>
        <Pane fx:id="canvasContainer" VBox.vgrow="ALWAYS">
            <Canvas fx:id="canvas" height="2000" width="2000"/>
        </Pane>
    </VBox>
</AnchorPane>
